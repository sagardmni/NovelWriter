<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.damani.novelwriter.AddChapterActivity">
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/title_prompt"
        android:id="@+id/enter_chapter_title" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/cancel"
        android:id="@+id/cancel_chapter_button"
        android:layout_gravity="right"
        android:layout_below="@+id/enter_chapter_title"
        android:layout_alignParentStart="true"
        android:onClick="onClickCancelChapter"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/save"
        android:id="@+id/save_chapter_button"
        android:layout_below="@+id/enter_chapter_title"
        android:layout_alignParentEnd="true"
        android:onClick="onClickSaveChapter"/>
</RelativeLayout>
